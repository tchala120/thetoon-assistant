{
  "name": "thetoon-assistant",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "PORT=3200 NEXT_PUBLIC_VERSION=$npm_package_version next dev",
    "build": "PORT=3200 NEXT_PUBLIC_VERSION=$npm_package_version next build",
    "postbuild": "next-sitemap",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "format": "prettier --write --ignore-unknown '**/*.{js,jsx,ts,tsx,css,md,json}'"
  },
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@line/bot-sdk": "^7.5.0",
    "@line/liff": "^2.21.0",
    "@sentry/nextjs": "^7.10.0",
    "@supabase/supabase-js": "^1.35.6",
    "@tabler/icons": "^1.82.0",
    "@tanstack/react-query": "^4.1.3",
    "antd-mobile": "^5.22.0",
    "antd-mobile-icons": "^0.3.0",
    "axios": "^0.27.2",
    "change-case": "^4.1.2",
    "dayjs": "^1.11.5",
    "http-status-codes": "^2.2.0",
    "next": "12.2.5",
    "next-seo": "^5.5.0",
    "next-sitemap": "^3.1.17",
    "nextjs-progressbar": "^0.0.14",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-use": "^17.4.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.18.10",
    "@emotion/babel-plugin": "^11.10.0",
    "@types/node": "18.7.3",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "eslint": "8.21.0",
    "eslint-config-next": "12.2.5",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "next-transpile-modules": "^9.0.0",
    "prettier": "2.7.1",
    "typescript": "4.7.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "arrowParens": "always",
    "printWidth": 80
  },
  "lint-staged": {
    "**/*": "yarn format"
  }
}
